{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "allowJs": true,
    "checkJs": true,
    "target": "ESNext",
    "module": "NodeNext",
    "strict": false,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "types"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
